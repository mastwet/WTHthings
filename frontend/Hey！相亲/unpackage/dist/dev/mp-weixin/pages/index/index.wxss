
.content {
display: -webkit-box;
display: -webkit-flex;
display: flex;
-webkit-box-orient: vertical;
-webkit-box-direction: normal;
-webkit-flex-direction: column;
        flex-direction: column;
-webkit-box-align: center;
-webkit-align-items: center;
        align-items: center;
-webkit-box-pack: center;
-webkit-justify-content: center;
        justify-content: center;
}
button{
	/* width: 100%; */
	height: 118rpx;
	line-height: 118rpx;
	background: #733000;
	border: 0px solid #733000;
	color: #fff;
	margin-top: 108rpx;
	border-radius: 0;
}
.item{
	width: 600rpx;
	height: 240rpx;
	background: #FFE332;
	-webkit-box-shadow: 0px 4px 10px 1px rgba(0, 0, 0, 0.3019607961177826);
	        box-shadow: 0px 4px 10px 1px rgba(0, 0, 0, 0.3019607961177826);
	border-radius: 10px 10px 10px 10px;
	opacity: 1;
	border: 3px solid #733000;
	font-weight: 500;
}
.item image{
	width: 160rpx;
	height: 160rpx;
	margin: 40rpx;
	margin-bottom: 0;
}
.item .text{
	font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
	float: right;
	margin-right: 100rpx;
	margin-top: 30rpx;
}
.item .text .name{
	font-size: 36rpx;
}
.item .text text{
	font-size: 22rpx;
}
.item .icon{
	width: 40rpx;
	height: 40rpx;
	margin: 0;
}
/* 另一个视角的css */
.itemChanged{
	position: relative;
	width: 600rpx;
	height: 728rpx;
}
.itemChanged image{
	width: 508rpx;
	height: 400rpx;
}
.itemChanged .textChanged{
	width: 508rpx;
	margin: auto;
	/* letter-spacing: 5rpx; */
}
.itemChanged .textChanged .name{
	font-size: 50rpx;
}
.itemChanged .textChanged text{
	font-size: 36rpx;
}
.itemChanged .icon{
	width: 60rpx;
	height: 60rpx;
	margin: 0;
}
.itemChanged .heart{
	position: absolute;
	width: 66rpx;
	height: 66rpx;
	right: 10rpx;
	bottom: 7rpx;
}
.itemChanged .circle{
	position: absolute;
	width: 86rpx;
	height: 86rpx;
	right: 0rpx;
	bottom: 0rpx;
}

